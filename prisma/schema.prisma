generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  SUPERADMIN
}

model User {
  id           String  @id @default(uuid())
  email        String  @unique
  username     String  @unique
  password     String
  phone        String
  street       String
  city         String
  state        String
  zipCode      String
  country      String
  firstName    String
  lastName     String
  image        String?
  role         Role    @default(USER)
  refreshToken String?
  accessToken  String?

  @@index([email, username])
}

model Product {
  id          String   @id @default(uuid())
  title       String
  description String?
  price       Decimal  @default(0)
  category    Category @relation(fields: [categoryID], references: [id])
  categoryID  String
  image       String?
}

model Category {
  id       String    @id @default(uuid())
  name     String    @unique
  products Product[]
}
